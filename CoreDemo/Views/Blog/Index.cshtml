
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

@using EntityLayer.Concrete
@model List<Blog>
<h3 class="tittle">Blog Posts</h3>
<div class="inner-sec">
			<!--left-->
			<div class="left-blog-info-w3layouts-agileits text-left">
				<div class="row">
					@foreach (var item in Model)
					{

						<div class="col-lg-4 card">
							<a href="/Blog/blogDetails/@item.BlogId">
								<img src="@item.BlogThumbnailImage" class="card-img-top img-fluid" width="100" height="100">
							</a>
							<div class="card-body">
								<ul class="blog-icons my-4">
									<li>
										<a href="#">
											<i class="far fa-calendar-alt"></i> @item.BlogCreateDate
										</a>
									</li>
									<li>
										<a href="#">
											<i class="fas fa-eye"></i>@item.Category.CategoryName
										</a>
									</li>

								</ul>
								<h5 class="card-title">
									<a href="/Blog/BlogDetails/@item.BlogId">@item.BlogTitle</a>
								</h5>
								<p class="card-text mb-3">@item.BlogContent </p>
								<a href="/Blog/BlogDetails/@item.BlogId" class="btn btn-primary read-m">Read More</a>
							</div>
						</div>



					}
					<nav aria-label="Page navigation example">
						<ul class="pagination justify-content-left mt-4">
							<li class="page-item disabled">
								<a class="page-link" href="#" tabindex="-1">Previous</a>
							</li>
							<li class="page-item">
								<a class="page-link" href="#">1</a>
							</li>
							<li class="page-item">
								<a class="page-link" href="#">2</a>
							</li>
							<li class="page-item">
								<a class="page-link" href="#">3</a>
							</li>
							<li class="page-item">
								<a class="page-link" href="#">Next</a>
							</li>
						</ul>
					</nav>
				</div>
				<!--//left-->
			</div>
		</div>

